---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Create Your Legal Website">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Create Your Legal Website</h1>
    
    <form id="siteRequestForm" class="max-w-2xl mx-auto space-y-6">
      <div class="space-y-4">
        <div>
          <label for="firmName" class="block text-sm font-medium text-gray-700">Firm Name</label>
          <input type="text" id="firmName" name="firmName" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
          <input type="email" id="email" name="email" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        </div>

        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
          <input type="tel" id="phone" name="phone" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        </div>

        <div>
          <label for="primaryColor" class="block text-sm font-medium text-gray-700">Primary Brand Color</label>
          <input type="color" id="primaryColor" name="primaryColor" required
            class="mt-1 block rounded-md border-gray-300 shadow-sm h-10">
        </div>
      </div>

      <button type="submit"
        class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Create My Website
      </button>

      <div id="formStatus" class="mt-4 text-center hidden">
        <p class="text-green-600" id="successMessage"></p>
        <p class="text-red-600" id="errorMessage"></p>
      </div>
    </form>
  </main>
</Layout>

<script>
  const form = document.getElementById('siteRequestForm');
  const formStatus = document.getElementById('formStatus');
  const successMessage = document.getElementById('successMessage');
  const errorMessage = document.getElementById('errorMessage');
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Clear previous messages
    successMessage.textContent = '';
    errorMessage.textContent = '';
    formStatus.classList.add('hidden');
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    try {
      console.log('Submitting to:', '/.netlify/functions/create-site');
      const response = await fetch('/.netlify/functions/create-site', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (!response.ok) {
        throw new Error(result.message || 'Failed to submit form');
      }
      
      formStatus.classList.remove('hidden');
      successMessage.textContent = 'Your website request has been submitted successfully!';
      form.reset();
      
    } catch (error) {
      console.error('Error:', error);
      formStatus.classList.remove('hidden');
      errorMessage.textContent = error.message || 'There was an error submitting your request. Please try again.';
    }
  });
</script> 