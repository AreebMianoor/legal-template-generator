---
const teamMembers = [
  {
    name: 'John Smith',
    title: 'Principal Immigration Lawyer',
    image: '/lawyer-profile.jpg',
    credentials: 'LLB | MBA | Immigration Law Specialist',
    linkedIn: '#'
  }
];
---

<section class="py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Our Team</h2>
    <div class="flex justify-center">
      {teamMembers.map(member => (
        <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-sm">
          <div class="h-80 bg-gray-100 flex items-center justify-center">
            <div class="text-6xl font-bold text-gray-300">JS</div>
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-semibold mb-2">{member.name}</h3>
            <p class="text-red-600 font-medium mb-2">{member.title}</p>
            <p class="text-gray-600 text-sm mb-4">{member.credentials}</p>
            <a 
              href={member.linkedIn}
              class="inline-flex items-center text-blue-600 hover:text-blue-800"
            >
              <span>View Profile</span>
              <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24">
                <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>