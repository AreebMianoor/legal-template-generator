---
import ContactInfo from './footer/ContactInfo.astro';
import SocialLinks from './footer/SocialLinks.astro';
import FooterNav from './footer/FooterNav.astro';
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="space-y-4">
        <div class="h-12 w-12 bg-red-800 text-white flex items-center justify-center text-2xl font-bold rounded">L</div>
        <p class="text-gray-400">
          Expert immigration legal services, helping you navigate your journey with confidence.
        </p>
      </div>
      
      <ContactInfo />
      <FooterNav />
      <SocialLinks />
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
      <p>&copy; {new Date().getFullYear()} Immigration Law Firm. All rights reserved.</p>
    </div>
  </div>
</footer>