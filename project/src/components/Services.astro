---
import ServiceCard from './services/ServiceCard.astro';

const services = [
  {
    title: 'Permanent Residence',
    description: 'Expert guidance through Express Entry, PNP, and other permanent residence pathways.',
    icon: 'mdi:home'
  },
  {
    title: 'Temporary Residence',
    description: 'Work permits, study permits, and visitor visas for your Canadian journey.',
    icon: 'mdi:file-document'
  },
  {
    title: 'Business Immigration',
    description: 'Solutions for entrepreneurs, investors, and businesses expanding to Canada.',
    icon: 'mdi:briefcase'
  }
];
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {services.map(service => (
        <ServiceCard {...service} />
      ))}
    </div>
  </div>
</section>